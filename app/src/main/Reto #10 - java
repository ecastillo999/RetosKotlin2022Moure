import java.util.HashMap;
import java.util.Stack;

public class ExprecionesEquilibradas {
    public static void main(String[] args) {
        String expr = "{{}}";
        System.out.println(areBracketsBalanced(expr));
    }

    public static boolean areBracketsBalanced(String expr) {
        Stack<Character> stack = new Stack<>();
        HashMap<Character, Character> matchingBrackets = new HashMap<>();
        matchingBrackets.put(')', '(');
        matchingBrackets.put('}', '{');
        matchingBrackets.put(']', '[');

        for (int i = 0; i < expr.length(); i++) {
            char currentChar = expr.charAt(i);

            if (matchingBrackets.containsValue(currentChar)) {
                stack.push(currentChar);
            } else if (matchingBrackets.containsKey(currentChar)) {
                if (stack.isEmpty() || !matchingBrackets.get(currentChar).equals(stack.pop())) {
                    return false;
                }
            }
        }
        return stack.isEmpty();
    }

}
