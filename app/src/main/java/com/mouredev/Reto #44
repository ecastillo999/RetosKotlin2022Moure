 */
public class BUMERANES {
   
    public static void main(String[] args) {
        int arr1[] = {2, 1, 2, 3, 3, 4, 2, 4};

       int result = encontrar(arr1);

       System.out.println(result);
    }

    public static int encontrar (int arr1 []){
        int cont =0;
        for (int i = 0; i < arr1.length - 2; i++) {
            if (arr1[i] == arr1[i+2] && arr1[i] != arr1[i+1]) {
                cont++;
            }
        }
        return cont;
    }

}
