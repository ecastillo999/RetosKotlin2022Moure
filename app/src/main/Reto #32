public class segundoiNumeroMasGrande {
    
    public static void main(String[] args) {
        int numeros[] = new int[4];
        numeros[0] = 6;
        numeros[1] = 3;
        numeros[2] = 10;
        numeros[3] = 1;
        

        Arrays.sort(numeros);
        int tamaño = numeros.length-1;
        System.out.println(numeros[tamaño-1]);
    }
}
