

import java.util.ArrayList;
import java.util.List;

public class numerosPerdidos {

   

    
    public static List<Integer> calcularFaltantes(int[] array) {
        if (array == null || array.length < 2) {
            throw new IllegalArgumentException("El array de entrada no es correcto.");
        }

        List<Integer> faltantes = new ArrayList<>();
        int menor = array[0];
        int mayor = array[array.length - 1];

 
        for (int i = menor + 1; i < mayor; i++) {
        
            boolean encontrado = false;
            for (int num : array) {
                if (num == i) {
                    encontrado = true;
                    break;
                }
            }
        
            if (!encontrado) {
                faltantes.add(i);
            }
        }

        return faltantes;
    }

    public static void main(String[] args) {
        int[] array = {1, 2, 4, 6}; 
        try {
            List<Integer> faltantes = calcularFaltantes(array);
            System.out.println("Faltantes: " + faltantes);
        } catch (IllegalArgumentException e) {
            System.out.println(e.getMessage());
        }
    }
}
